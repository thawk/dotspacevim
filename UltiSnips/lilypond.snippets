snippet melody "xxMelody" b
"${1:`!v expand("%:t:r")`}Melody" =
{
	\key ${2:\\"${1:`!v expand("%:t:r")`}Key"} ${3:\major}
	\transpose c $2 {
		${4:\tempo 4 = ${5:60}}
		\melody
	}
}
endsnippet

snippet inote "include note"
\\pageBreak

\\include "../${1:notes}/${2:name}.ily"

\\tocItem \markup \concat { \\"${3:$2}Piece" "" }
\\score {
	\\transpose c ${4:\\"$2Key"} {
		\\chooseMusic "a4" \\"$3NotesC" \\"$3MelodyC"
	}
	\\header {
		piece    = \\"$3Piece"
		opus     = \\"$3Opus"
		composer = \\"$3Composer"
	}
}
${0}
endsnippet

snippet note "Notes" b
"${1:`!v expand("%:t:r")`}Piece" = "${2:$1}"
"$1Opus" = ""
"$1Composer" = ""
"$1Singer" = ""
"$1Key" = \\Key${3:C}

"$1Pitches" = \relative ${4:c''}
{
	\time ${5:4/4}
	\key `!p snip.rv = re.sub("[,']+", "", t[8])` ${9:\major}

	${0}

	\fine
}

"$1NotesC" =
{
	${6:\tempo 4 = ${7:60}}

	\transpose ${8:c} c {
		\"$1Pitches"
	}
}

"$1Notes" =
{
	\transpose c \\"$1Key" {
		\"$1NotesC"
	}
}

"$1MelodyC" = \"$1NotesC"
"$1Melody" = \"$1Notes"
endsnippet

snippet note "Notes with lyric" b
"${1:`!v expand("%:t:r")`}Piece" = "${2:$1}"
"$1Opus" = ""
"$1Composer" = ""
"$1Singer" = ""
"$1Key" = \\Key${3:C}

melody = \relative ${4:c''}
{
	\time ${5:4/4}
	\key `!p snip.rv = re.sub("[,']+", "", t[8])` ${9:\major}

	${0}

	\fine
}

verse = \lyricmode {
}

"$1Pitches" =
{
	<<
		\new Voice = "melody" {
			${6:\tempo 4 = ${7:60}}

			\melody
		}
		\new Lyrics = "verse" \lyricsto "melody" {
			\verse
		}
	>>
}

"$1NotesC" =
{
	\transpose ${8:c} c {
		\"$1Pitches"
	}
}

"$1Notes" =
{
	\transpose c \\"$1Key" {
		\"$1NotesC"
	}
}

"$1MelodyC" =
{
	\transpose $8 c {
		$6
		\melody
	}
}

"$1Melody" =
{
	\transpose c \\"$1Key" {
		\"$1MelodyC"
	}
}
endsnippet

