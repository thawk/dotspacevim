snippet parallel "parallelMusic" b
\parallelMusic #'(${1:melody} ${2:harmony}) {
	% Bar 1
	${0} |
	|

	% Bar 2
	|
	|
}
\new StaffGroup <<
	\new Staff \\$1
	\new Staff \\$2
>>
endsnippet

snippet note "Parallel Notes (one staff)" b
"${1:`!v expand("%:t:r")`}Piece" = "${2:$1}"
"$1Opus" = ""
"$1Composer" = ""
"$1Singer" = ""
"$1Key" = \\Key${3:C}

\parallelMusic #'(melody harmony) {

	\time ${3:4/4}

	${0}

	\fine
}

"$1Pitches" =
{
	\new Staff <<
		${4:\tempo 4 = ${5:108}}

		\relative c'' \melody
		\\\\
		\relative c' \harmony
	>>
}

"$1Notes" =
{
	\transpose c ${6:c} {
		\key ${7:c} ${8:\major}
		\"$1Pitches"
	}
}

"$1Melody" = \"$1Notes"
endsnippet

snippet note "Parallel Notes (1 staffs with lyric)" b
"${1:`!v expand("%:t:r")`}Piece" = "${2:$1}"
"$1Opus" = ""
"$1Composer" = ""
"$1Singer" = ""
"$1Key" = \\Key${3:C}

\parallelMusic #'(preludeM preludeH) {

	\time $3

	${0}

}

\parallelMusic #'(melody harmony) {

	\time ${3:4/4}


	\fine
}

grayVoice = {
	\override Accidental.color = #(x11-color 'gray50)
	\override Beam.color       = #(x11-color 'gray50)
	\override Dots.color       = #(x11-color 'gray50)
	\override NoteHead.color   = #(x11-color 'gray50)
	\override Rest.color       = #(x11-color 'gray50)
	\override Stem.color       = #(x11-color 'gray50)
	\override Tie.color        = #(x11-color 'gray50)
}

"$1Pitches" =
{
	<<
		\new Voice = "melody" {
			${4:\tempo 4 = ${5:60}}

			<<
				\new Voice {
					\voiceThree
					\relative c'' {
						\preludeM
					}
				}
				\new Voice {
					\voiceFour
					\grayVoice
					\relative c' {
						\preludeH
					}
				}
				{
					\voiceOne
					\relative c'' {
						\melody
					}
				}
				\new Voice {
					\voiceTwo
					\grayVoice
					\relative c' {
						\harmony
					}
				}
			>>
		}

		\new Lyrics="firstVerse" \lyricsto "melody" {
		}
		\new Lyrics="secondVerse" \lyricsto "melody" {
			\repeat unfold 4 { \skip 1 }
		}
	>>
}

"$1Notes" =
{
	\transpose c ${6:c} {
		\key ${7:c} ${8:\major}
		\"$1Pitches"
	}
}

"$1Melody" =
{
	<<
		\new Voice = "melody" {
			$4

			<<
				\new Voice {
					\voiceThree
					\relative c'' {
						\preludeM
					}
				}
				{
					\voiceOne
					\relative c'' {
						\melody
					}
				}
			>>
		}
		\new Lyrics \lyricsto "melody" {
			\verse
		}
	>>
}
endsnippet

