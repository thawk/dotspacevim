snippet skel "普通高低音部，带和弦和歌词" b
"${1:`!v expand("%:t:r")`}Piece" = "${2:$1}"
"$1Opus" = ""
"$1Composer" = ""
"$1Singer" = ""
"$1Key" = \\Key${3:C}

"$1Up" = \relative ${4:c''}
{
	\time ${5:4/4}
	\key `!p snip.rv = re.sub("[,']+", "", t[9])` ${10:\major}

	${0}

	\fine
}

"$1Down" = \relative ${6:c}
{
	\time $5
	\key `!p snip.rv = re.sub("[,']+", "", t[8])` $9

	${0}

	\fine
}


"$1Pitches" =
{
	\new StaffGroup <<
		\new Staff {
			${7:\tempo 4 = ${8:108}}

			\relative c'' \"$1Up"
		}
		\new Staff {
			\relative c' \"$1Down"
		}
	>>
}

"$1NotesC" =
{
	\transpose ${9:c} c {
		\"$1Pitches"
	}
}

"$1Notes" =
{
	\transpose c \\"$1Key" {
		\"$1NotesC"
	}
}

"$1Melody" = \"$1Notes"
endsnippet

